{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // ✅ Next.js plugin
    "plugins": [
      {
        "name": "next"
      }
    ],

    // ✅ Gebruik absolute imports zonder 'src/'
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },

  // ✅ Inclusie van alle belangrijke directories
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],

  "exclude": ["node_modules"]
}
